<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="50dp"
    tools:context="com.project.kuyk.yukmemilih.Menu.PilpresFragment">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="30sp"
            android:textColor="#000000"/>
        <ImageView
            android:layout_width="120dp"
            android:layout_height="160dp"
            android:src="@drawable/ic_people_black_24dp"
            android:background="@drawable/border"/>
        <TextView
            android:id="@+id/calon1pp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/calon1"
            android:textSize="18sp"
            android:layout_marginTop="8dp"/>
        <Button
            android:id="@+id/btn_vote1pp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/vote"
            android:textColor="#ffffff"
            android:background="@drawable/round_button"/>
    </LinearLayout>

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryDark"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"
            android:textSize="30sp"
            android:textColor="#000000"/>
        <ImageView
            android:layout_width="120dp"
            android:layout_height="160dp"
            android:src="@drawable/ic_people_black_24dp"
            android:background="@drawable/border"/>
        <TextView
            android:id="@+id/calon2pp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/calon2"
            android:textSize="18sp"
            android:layout_marginTop="8dp"/>
        <Button
            android:id="@+id/btn_vote2pp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/vote"
            android:textColor="#ffffff"
            android:background="@drawable/round_button"/>
    </LinearLayout>
</LinearLayout>
